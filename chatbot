import random

# Define a list of responses for different user inputs
responses = {
    "hello": ["Hi there!", "Hello!", "Greetings!", "How can I help you today?"],
    "how are you": ["I'm just a program, but thanks for asking!", "Doing well, how about you?", "I don't have feelings, but I'm here to help!"],
    "what is your name": ["I'm a simple chatbot created to assist you.", "You can call me Chatbot!"],
    "bye": ["Goodbye! Have a great day!", "See you later!", "Take care!"],
    "joke": ["Why did the scarecrow win an award? Because he was outstanding in his field!", 
              "I told my computer I needed a break, and now it won't stop sending me beach wallpapers!"],
    "weather": ["It's sunny with a chance of meatballs!", "I can't check the weather, but I hope it's nice outside!"],
    "help": ["I can chat with you, tell jokes, and provide information. Just ask me anything!", 
             "Try asking me about the weather, tell me to joke, or just say hello!"],
    "favorite color": ["I don't have a favorite color, but I think all colors are beautiful!", 
                       "Colors are fascinating! What's your favorite color?"],
    "default": ["I'm sorry, I don't understand that.", "Can you please rephrase?", "I'm not sure how to respond to that."]
}

# Memory to store user preferences
user_memory = {}

def get_response(user_input):
    # Normalize the user input to lower case
    user_input = user_input.lower()
    
    # Check if the user asked for a random number
    if "random number" in user_input:
        random_number = random.randint(0, 1000)
        return f"Here is your random number: {random_number}"
    
    # Check for known responses
    for key in responses:
        if key in user_input:
            return random.choice(responses[key])
    
    # If no known response, return a default response
    return random.choice(responses["default"])

def remember_user_preference(user_input):
    if "favorite color" in user_input:
        color = user_input.split("favorite color is")[-1].strip()
        user_memory['favorite_color'] = color
        return f"Got it! Your favorite color is {color}."
    return None

def chatbot():
    print("Chatbot: Hello! I'm here to chat with you. Type 'bye' to exit.")
    
    while True:
        user_input = input("You: ")
        
        # Exit the chat if the user types 'bye'
        if user_input.lower() == 'bye':
            print("Chatbot: Goodbye! Have a great day!")
            break
        
        # Remember user preferences
        memory_response = remember_user_preference(user_input)
        if memory_response:
            print(f"Chatbot: {memory_response}")
            continue
        
        # Get a response from the chatbot
        response = get_response(user_input)
        print(f"Chatbot: {response}")

# Run the chatbot
if __name__ == "__main__":
    chatbot()
